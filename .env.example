# Copy this file to .env and fill in your actual values for local development.
# DO NOT COMMIT THE .env FILE TO GIT.

# Flask specific
SECRET_KEY=your_development_secret_key_here # Replace with a random string for local dev
FLASK_ENV=development # Or 'production'
FLASK_DEBUG=True # Typically True for development

# Database configuration
# Example for SQLite in instance folder:
# SQLALCHEMY_DATABASE_URI=sqlite:///../instance/flaskr.sqlite
# Example for PostgreSQL:
# SQLALCHEMY_DATABASE_URI=postgresql://user:password@host:port/database_name
SQLALCHEMY_DATABASE_URI=

# External Service API Keys
GEMINI_API_KEY=your_google_gemini_api_key_here

# Session Management (Example using filesystem)
SESSION_TYPE=filesystem
# SESSION_FILE_DIR= # Optional: Defaults to instance/flask_session
# If using Redis:
# SESSION_TYPE=redis
# SESSION_REDIS=redis://localhost:6379/0
